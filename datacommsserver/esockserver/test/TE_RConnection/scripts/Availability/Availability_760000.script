PRINT Running BEARER_MOBILITY_760000
PRINT Title: TODO
PRINT Synopsis: TODO

// Set up the commdb database the way it's needed
CED -i z:\testdata\configs\BearerMobility\760000.ced.xml c:\BearerMobility.ced.log

// Load the test suite and esock
LOAD_SUITE te_esockteststepsSuite -SharedData
RUN_SCRIPT z:\TestData\scripts\te_esock_test_loadesock.script


START_TESTCASE			COMINF-ESOCK-RConnection-Availability-0101
//! @SYMTestCaseID		COMINF-ESOCK-RConnection-Availability-0101


// PHASE 1
RUN_TEST_STEP 100 te_esockteststepsSuite creatersocketservStep z:\testdata\configs\BearerMobility\760000_Phase1.ini
RUN_TEST_STEP 100 te_esockteststepsSuite connectrsocketservStep z:\testdata\configs\BearerMobility\760000_Phase1.ini

// Create an RConnection on which we will test availability
RUN_TEST_STEP 100 te_esockteststepsSuite createrconnectionStep z:\testdata\configs\BearerMobility\760000_Phase1.ini

// Create availability simulators for each bearer
RUN_TEST_STEP 100 te_esockteststepsSuite CreateBearerAvailabilitySimulatorStep z:\testdata\configs\BearerMobility\760000_Phase1.ini

// Select our connection and create an extension in order to manage availability
RUN_TEST_STEP 100 te_esockteststepsSuite SelectRConnectionStep z:\testdata\configs\BearerMobility\760000_Phase1.ini
RUN_TEST_STEP 100 te_esockteststepsSuite GetAvailabilityAPIStep z:\testdata\configs\BearerMobility\760000_Phase1.ini

// Confirm initial availability of our bearer (bearer1)
RUN_TEST_STEP 100 te_esockteststepsSuite CheckForAvailabilityStep z:\testdata\configs\BearerMobility\760000_Phase1.ini


// PHASE 2
// Make our bearer (bearer1) available and confirm it has become so
RUN_TEST_STEP 100 te_esockteststepsSuite ChangeBearerAvailabilityStep z:\testdata\configs\BearerMobility\760000_Phase2.ini
RUN_TEST_STEP 100 te_esockteststepsSuite CheckForAvailabilityStep z:\testdata\configs\BearerMobility\760000_Phase2.ini

// PHASE 3
// Make our bearer unavailable again and confirm it has become so
RUN_TEST_STEP 100 te_esockteststepsSuite ChangeBearerAvailabilityStep z:\testdata\configs\BearerMobility\760000_Phase3.ini
RUN_TEST_STEP 100 te_esockteststepsSuite CheckForAvailabilityStep z:\testdata\configs\BearerMobility\760000_Phase3.ini

END_TESTCASE			COMINF-ESOCK-RConnection-Availability-0101


// Clean up
RUN_SCRIPT Z:\TestData\Scripts\te_esock_test_stopallinterfaces.script
RUN_SCRIPT Z:\TestData\scripts\te_esock_test_unloadesockForced.script

