PRINT Running BEARER_MOBILITY_760500
PRINT Title: TODO
PRINT Synopsis: TODO

// Set up the commdb database the way it's needed
CED -i z:\testdata\configs\BearerMobility\760500.ced.xml c:\BearerMobility.ced.log

// Load the test suite and esock
LOAD_SUITE te_esockteststepsSuite -SharedData
RUN_SCRIPT z:\TestData\scripts\te_esock_test_loadesock.script


START_TESTCASE			COMINF-ESOCK-RConnection-Availability-0601
//! @SYMTestCaseID		COMINF-ESOCK-RConnection-Availability-0601


// PHASE 1
// Start with no bearers connected and no bearers available
RUN_TEST_STEP 100 te_esockteststepsSuite creatersocketservStep z:\testdata\configs\BearerMobility\Availability_760500.ini
RUN_TEST_STEP 100 te_esockteststepsSuite connectrsocketservStep z:\testdata\configs\BearerMobility\Availability_760500.ini

// Create a connection (conn1) on snap1 (bearer1 a member of snap1, but bearer2 not)
RUN_TEST_STEP 100 te_esockteststepsSuite createrconnectionStep z:\testdata\configs\BearerMobility\Availability_760500.ini

// Select our connection and create an extension in order to listen for changes in availability
RUN_TEST_STEP 100 te_esockteststepsSuite SelectRConnectionStep z:\testdata\configs\BearerMobility\Availability_760500.ini
RUN_TEST_STEP 100 te_esockteststepsSuite GetAvailabilityAPIStep z:\testdata\configs\BearerMobility\Availability_760500.ini

// Register for availability notifications on conn1
RUN_TEST_STEP 100 te_esockteststepsSuite RegisterForAvailabilityNotificationStep z:\testdata\configs\BearerMobility\Availability_760500.ini

// Create availability simulators for bearer1 and bearer2
RUN_TEST_STEP 100 te_esockteststepsSuite CreateBearerAvailabilitySimulatorStep z:\testdata\configs\BearerMobility\Availability_760500.ini


// PHASE 2
// Make bearer1 available and confirm notification of availability on conn1
RUN_TEST_STEP 100 te_esockteststepsSuite ChangeBearerAvailabilityStep z:\testdata\configs\BearerMobility\Availability_760500.ini
RUN_TEST_STEP 100 te_esockteststepsSuite CheckForAvailabilityNotificationStep z:\testdata\configs\BearerMobility\Availability_760500.ini


// PHASE 3
// Make bearer2 (not on snap1) available and confirm no notification on our connection
RUN_TEST_STEP 100 te_esockteststepsSuite ChangeBearerAvailabilityStep z:\testdata\configs\BearerMobility\Availability_760500.ini
RUN_TEST_STEP 100 te_esockteststepsSuite CheckForAvailabilityNotificationStep z:\testdata\configs\BearerMobility\Availability_760500.ini


// PHASE 4
// Make bearer1 unavailable and confirm notification on our connection
RUN_TEST_STEP 100 te_esockteststepsSuite ChangeBearerAvailabilityStep z:\testdata\configs\BearerMobility\Availability_760500.ini
RUN_TEST_STEP 100 te_esockteststepsSuite CheckForAvailabilityNotificationStep z:\testdata\configs\BearerMobility\Availability_760500.ini

END_TESTCASE			COMINF-ESOCK-RConnection-Availability-0601


// Clean up
RUN_SCRIPT Z:\TestData\Scripts\te_esock_test_stopallinterfaces.script
RUN_SCRIPT Z:\TestData\scripts\te_esock_test_unloadesockForced.script

PRINT Completed BEARER_MOBILITY_760500


